<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_50" />
        </shape>
    </item>

    <item android:drawable="@drawable/shape_line_accent_border_2dp" android:state_enabled="false" android:state_pressed="true" />

    <item android:drawable="@drawable/shape_line_accent_border_2dp" android:state_checked="true" />

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_50" />
        </shape>
    </item>

    <item
        android:drawable="@drawable/shape_bottom_line_accent_border_2dp"
        />

</selector>